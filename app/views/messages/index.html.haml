.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p{class: "side-header__box--user-name"}
          = current_user.name
        %ul{class: "side-header__box__menu"}
          %li
            = link_to edit_user_path(current_user) do
              %i.fa.fa-edit
          %li
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'
    .groups
      = render partial: 'group'

  .chat-main
    .main-header
      .main-header__left-box
        %h2{class: "main-header__left-box--current-group"}
          test
        %ul{class: "main-header__left-box__member-list"}
          Memberï¼š
          %li
            test1
      %a{href: "#"}
        .edit-btn
          Edit
    .messages
      = render partial: 'message'
    .form
      %form{class: "form__new-message"}
        .input-box
          %input{class: "input-box__text", type: "text", placeholder: "type a message"}
          %label{class: "input-box__image"}
            %i{class: "fa fa-image"}
            %input{class: "input-box__image__file", type: "file", name: "image"}
        %input{class: "submit-btn", type: "submit", value: "Send"}

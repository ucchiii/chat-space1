.message{"data-message-id": "#{message.id}"}
  .message__upper-info
    .message__upper-info--talker
      = message.user.name
    .message__upper-info--date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url,width: '300px' , class: 'lower-message__image' if message.image.present?
